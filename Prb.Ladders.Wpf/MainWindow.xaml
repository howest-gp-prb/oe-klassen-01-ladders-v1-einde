                <Label Content="Verkoopprijs : " HorizontalAlignment="Left" Height="29" Margin="10,146,0,0" VerticalAlignment="Top" Width="122"/>
                <Label Content="Aantal in stock : " HorizontalAlignment="Left" Height="29" Margin="10,180,0,0" VerticalAlignment="Top" Width="122"/>
                <Label Content="Stockwaarde : " HorizontalAlignment="Left" Height="29" Margin="10,214,0,0" VerticalAlignment="Top" Width="122"/>
                <Label x:Name="lblBrand" Background="OldLace" Content="" HorizontalAlignment="Left" Height="29" Margin="161,10,0,0" VerticalAlignment="Top" Width="246"/>
                <Label x:Name="lblSections"  HorizontalContentAlignment="Right"  Background="OldLace" Content="" HorizontalAlignment="Center" Height="29" Margin="0,44,0,0" VerticalAlignment="Top" Width="46"/>
